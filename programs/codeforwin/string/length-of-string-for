#include <stdio.h>
#include <string.h>
#define SIZE 80

int main(void)
{
	char str[SIZE];
	int length;
	int counter;
	
	printf("Input string: ");
	fgets(str, SIZE, stdin);
	str[strlen(str) - 1] = '\0';
	
	for (int i = 0; str[i] != '\0'; i++)
	{
		counter++;
	}
	
	length = counter;
	
	printf("Length of string: %d\n", length);
	
	return 0;
}
